{
  "version": "independent",
  "command": {
    "publish": {
      "registry": "http://localhost:8081/repository/npm-private",
      "ignoreChanges": [
        "ignored-file",
        "*.md"
      ]
    },
    "bootstrap": {
      "ignore": "component-*",
      "npmClientArgs": [
        "--no-package-lock"
      ]
    }
  },
  "packages": [
    "packages/**/*"
  ]
}
